<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminFragment.AddComapnyFragment"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/addcompanytxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="25dp"
        android:text="Add Company"
        android:textAlignment="center"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".AdminFragment.AddComapnyFragment"
        android:orientation="vertical"
        >

    <EditText
        android:id="@+id/AddetCompanyname"
        android:hint="Company Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_margin="10dp"
        android:background="#D9D9D9"
        android:padding="10dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/Addetmobile"
        android:hint="mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_margin="10dp"
        android:background="#D9D9D9"
        android:padding="10dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/AddetAddress"
        android:hint="Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_margin="10dp"
        android:background="#D9D9D9"
        android:padding="10dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/AddetEmail"
        android:hint="Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_margin="10dp"
        android:background="#D9D9D9"
        android:padding="10dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/AddetWebsite"
        android:hint="Website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_margin="10dp"
        android:background="#D9D9D9"
        android:padding="10dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/AddetGstNo"
        android:hint="Gstno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_margin="10dp"
        android:background="#D9D9D9"
        android:padding="10dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/AddetHscSac"
        android:hint="Hsc/Sac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_margin="10dp"
        android:background="#D9D9D9"
        android:padding="10dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/AddetCompanyPan"
        android:hint="CompanyPan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_margin="10dp"
        android:background="#D9D9D9"
        android:padding="10dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/AddetPassword"
        android:hint="Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_margin="10dp"
        android:background="#D9D9D9"
        android:padding="10dp"
        android:textSize="20dp"/>


    <Button
        android:id="@+id/AddComapanyButton"
        android:text="Add Company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_margin="20dp"
        android:backgroundTint="#00BCD4"
        android:padding="10dp"
        android:textSize="20dp"/>

    </LinearLayout>
    </ScrollView>
</LinearLayout>