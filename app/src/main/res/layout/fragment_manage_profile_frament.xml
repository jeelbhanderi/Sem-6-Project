<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AED9E0"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
    <ImageView
        android:id="@+id/user_dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/default_profile"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/editTextCompanyName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Company Name"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:background="#30ffffff"
        android:padding="20dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/editTextMobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:background="#30ffffff"
        android:padding="20dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/editTextAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:background="#30ffffff"
        android:padding="20dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:background="#30ffffff"
        android:padding="20dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/editTextWebsite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Website"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:background="#30ffffff"
        android:padding="20dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/editTextGstNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="GST No"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:background="#30ffffff"
        android:padding="20dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/editTextHscSac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="HSC SAC"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:background="#30ffffff"
        android:padding="20dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/editTextCompanyPan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Company PAN"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:background="#30ffffff"
        android:padding="20dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:background="#30ffffff"
        android:padding="20dp"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/com_Edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#2196F3"
        android:text="Edit" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
