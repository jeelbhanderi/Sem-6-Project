<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/material_dynamic_primary99">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:text="Edit Detail"
                android:textAlignment="center"
                android:textSize="30dp" />

            <EditText
                android:id="@+id/regetCompanyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="CompanyName"
                android:padding="20dp" />

            <EditText
                android:id="@+id/regetmobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Mobile"
                android:padding="20dp" />

            <EditText
                android:id="@+id/regetAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Address"
                android:padding="20dp" />

            <EditText
                android:id="@+id/regetEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Email"
                android:padding="20dp" />

            <EditText
                android:id="@+id/regetWebsite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Website"
                android:padding="20dp" />

            <EditText
                android:id="@+id/regetgstno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Gstno"
                android:padding="20dp" />

            <EditText
                android:id="@+id/regetHScSac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Hsc/Sac"
                android:padding="20dp" />

            <EditText
                android:id="@+id/regetCompanyPan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="CompanyPan"
                android:padding="20dp" />

            <EditText
                android:id="@+id/regetpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="password"
                android:padding="20dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
