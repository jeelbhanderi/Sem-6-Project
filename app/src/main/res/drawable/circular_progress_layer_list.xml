<!-- res/drawable/circular_progress_layer_list.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Completed Progress -->
    <item android:id="@android:id/progress">
        <clip>
            <bitmap
                android:src="@drawable/circular_progress_completed"
                android:tileMode="repeat" />
        </clip>
    </item>

    <!-- Remaining Progress -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <bitmap
                android:src="@drawable/circular_progress_remaining"
                android:tileMode="repeat" />
        </clip>
    </item>

</layer-list>
